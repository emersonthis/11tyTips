---js
{
  pagination:
  {
    data: 'collections.tip',
    size: 10,
    alias: 'tips',
  },
}
---
<menu data--="menu">
  <h4><a href="{{ settings._url }}">Home</a></h4>
  <h4><a href="{{ settings._git }}">Github</a></h4>
  <h4><a href="{{ settings._twi }}">Twitter</a></h4>
  <h2 data--="tips_order">All the tips</h2>
  <ol data--="tips_list">
  {% for tip in tips %}
    <li data--="tips_entry"><a href="{{ tip.url | url }}">{{ tip.data.title }}</a><span>{{ tip.data.subtitle }}</span></li>
  {% endfor %}
  </ol>
</menu>
